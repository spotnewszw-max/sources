# Development Environment Configuration
ENVIRONMENT=development
DEBUG=True
APP_NAME=News Aggregator - Development

# Database (SQLite for development)
DATABASE_URL=sqlite:///./news_aggregator.db

# Redis & Celery (optional in development - will use sync tasks if unavailable)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Keys (Optional - app works without them for basic features)
OPENAI_API_KEY=sk-test-key-not-configured
ANTHROPIC_API_KEY=not-configured
NEWS_API_KEY=not-configured

# Application Settings
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# Media Processing
SPACY_MODEL=en_core_web_sm
ENABLE_MEDIA_PROCESSING=true

# Tesseract OCR (if installed)
TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# FFmpeg (if installed)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe